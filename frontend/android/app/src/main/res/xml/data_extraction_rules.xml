<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include user data -->
        <include domain="sharedpref" path="user_prefs.xml" />
        <include domain="sharedpref" path="app_settings.xml" />
        <include domain="database" path="user_data.db" />
        
        <!-- Exclude sensitive data -->
        <exclude domain="sharedpref" path="auth_tokens.xml" />
        <exclude domain="sharedpref" path="secure_prefs.xml" />
        <exclude domain="database" path="secure.db" />
        <exclude domain="file" path="private/" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Include all user data for device transfer -->
        <include domain="sharedpref" path="." />
        <include domain="database" path="." />
        <include domain="file" path="." />
        
        <!-- Exclude temporary files -->
        <exclude domain="file" path="cache/" />
        <exclude domain="file" path="temp/" />
    </device-transfer>
</data-extraction-rules>

